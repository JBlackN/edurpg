nav.navbar.navbar-expand-lg.navbar-light.bg-light
  a.navbar-brand href="#{url_for landing_index_path}" eduRPG
  button.navbar-toggler type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
    span.navbar-toggler-icon

  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
      li.nav-item.dropdown
        a.nav-link.dropdown-toggle#navbarDropdownCharacter href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" Postava
        .dropdown-menu aria-labelledby="navbarDropdownCharacter"
          a.dropdown-item href="#{url_for user_skills_path}" Dovednosti
          a.dropdown-item href="#{url_for user_achievements_path}" Úspěchy
          a.dropdown-item href="#{url_for user_titles_path}" Tituly
          a.dropdown-item href="#{url_for user_items_path}" Inventář
      li.nav-item.dropdown
        a.nav-link.dropdown-toggle#navbarDropdownClass href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" Povolání
        .dropdown-menu aria-labelledby="navbarDropdownClass"
          a.dropdown-item href="#{url_for user_quests_path}" Úkoly
          a.dropdown-item href="#{url_for user_talent_trees_path}" data-turbolinks="false" Talentové stromy
          a.dropdown-item href="#" Nehráčské postavy
      li.nav-item.dropdown
        a.nav-link.dropdown-toggle#navbarDropdownGuild href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" Cechy
        .dropdown-menu aria-labelledby="navbarDropdownGuild"
          a.dropdown-item href="#{url_for user_guild_path(0)}" = current_user.character.character_class.name
          - if current_user.character.specialization
            a.dropdown-item href="#{url_for user_guild_path(1)}" = current_user.character.specialization.name
    ul.navbar-nav
      li.nav-item.dropdown
        a.nav-link.dropdown-toggle#navbarDropdownUser href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" = current_user.username
        .dropdown-menu aria-labelledby="navbarDropdownUser"
          a.dropdown-item href="#" Správa účtu
          a.dropdown-item href="#{url_for :logout}" Odhlásit se
